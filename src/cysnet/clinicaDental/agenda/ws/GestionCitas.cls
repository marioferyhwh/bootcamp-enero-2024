	Set req = ##class(cysnet.clinicaDental.agenda.msg.AltaCitasRequest).%New()
	Set req.idPaciente = idPaciente
    Set req.descCita = descCita
    Set req.fechaCita = fechaCita
	
	Do ..SendRequestSync("CitasSQL", req, .rsp)
	
	Quit rsp
